{
  "name": "outlook-mcp",
  "version": "1.0.0",
  "description": "MCP server for Claude to access Outlook data via Microsoft Graph API",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "outlook-mcp": "build/index.js"
  },
  "scripts": {
    "build": "tsc && chmod 755 build/index.js build/auth-server.js",
    "start": "node build/index.js",
    "dev": "tsc --watch",
    "auth-server": "node build/auth-server.js",
    "inspect": "pnpm build && npx @anthropic-ai/mcp-inspector node build/index.js"
  },
  "keywords": [
    "claude",
    "outlook",
    "mcp",
    "microsoft-graph",
    "email",
    "calendar"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.9.0"
}
